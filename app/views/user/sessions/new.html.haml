#authorization-container
  #login-form.middle-of
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .grouped-form-element
        .form-group
          = f.text_field :username, autofocus: true, class: 'form-control', placeholder: 'username'
        .form-group
          = f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'password'
      .circle-block.outer-circle.middle-of
        = f.button '', class: 'circle-block inner-circle middle-of fa fa-play'
    = render 'user/shared/links'
