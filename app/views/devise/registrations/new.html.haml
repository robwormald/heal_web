#authorization-container
  #register-form.col-xs-12.col-sm-2.middle-of
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .grouped-form-element
        .form-group
          = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'email'
        .form-group
          = f.text_field :username, class: 'form-control', placeholder: 'username'
        .form-group
          = f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'password'
        .form-group
          = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'password 2x'
      .circle-block.outer-circle.middle-of
        = f.button '', class: 'circle-block inner-circle middle-of fa fa-play'
    = devise_error_messages_auth!
    .form-links.text-center
      = link_to('forgot password?', new_user_password_path)
      = link_to('login', new_user_session_path)
