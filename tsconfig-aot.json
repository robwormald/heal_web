{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "files": [
    "public/app/app.module.ts",
    "public/app/main.ts"
  ],

  "angularCompilerOptions": {
    "genDir": "public/aot",
    "skipMetadataEmit" : true
  }
}
