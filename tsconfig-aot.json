{
  "compilerOptions": {
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "pretty": false,
    "sourceMap": true,
    "lib": ["es5", "dom"],
    "noEmit": true,
    "strictNullChecks": false,
    "skipDefaultLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "core-js",
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "public/app/main.ts"
  ],

  "angularCompilerOptions": {
    "genDir": "./public/app/aot",
    "skipMetadataEmit" : true
  }
}
